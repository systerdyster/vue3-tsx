{
    "extends": "stylelint-config-recommended",
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["tailwind", "layer", "apply", "variants", "responsive", "screen", "each", "for", "if", "else", "import"]
            }
        ],
        "block-no-empty": null,
        "unit-allowed-list": ["em", "rem", "s", "px", "fr", "deg", "%", "vh", "vw", "pt", "cm"]
    },
    "ignoreFiles": [
        "@coverage/**/*.*",
        "node_modules/**/*.*",
        "@metrics/**/*.*"
    ]
}