{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": true,
        "allowUnreachableCode": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "jsx": "preserve",
        "typeRoots": [
            "node_modules/@types/", 
            "src/@types/"
        ],
        "lib": [
            "dom", 
            "es5", 
            "es2015.promise", 
            "es6"
        ],
        "baseUrl": "./src",
        "paths": {
            "__business/*": ["business/*"],
            "__components/*": ["components/*"],
            "__definitions/*": ["business/definitions/*"],
        }
    },
    "include": [
        "./src"
    ],
    "vueCompilerOptions": {
        "plugins": ["@volar/vue-language-plugin-pug"]
    }
}
